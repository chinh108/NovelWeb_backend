{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"noLib": false,
		"noImplicitAny": false,
		"outDir": "./dist",
		"baseUrl": "./src",
		"typeRoots": [
			"node_modules/@types",
			"types"
		],
		"paths": {
			"@entity": [
				"entity"
			],
			"@common": [
				"common"
			],
			"@utils": [
				"utils"
			]
		}
	},
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"]
}